    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProductsFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
